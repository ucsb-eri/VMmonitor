    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        h2.sub-header Latest VM Status
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th Time
                        th VM
                        th Host
                        th State
                        th Path
                        th FS Type
                        th OS Type
                        th Memory(GB)
                        th #CPU

                tbody
                    - for local in status
                        tr
                            td= local.generateTime
                            td= local.name
                            td= local.hostName
                            td(style='color:' + local.color)= local.state
                            td= local.path
                            td= local.FSType
                            td= local.OSType
                            td= local.maxMem
                            td= local.numOfCpu


