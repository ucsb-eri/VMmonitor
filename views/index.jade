    .container
        each vm in indexLocals
            .vmhost.kvm
                .vmhost-label= vm.hostname
                .vmhost-details
                    strong cpu: #{vm.cpuUsed} / #{vm.cpuMax}
                    br/
                    strong mem: #{vm.memUsed} / #{vm.memMax}
                .vmguest.running(onmouseover='show(id)')


